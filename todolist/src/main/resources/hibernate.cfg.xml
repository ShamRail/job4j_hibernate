<?xml version = "1.0" encoding = "utf-8"?>
<hibernate-configuration>
    <session-factory>
        <property name = "hibernate.connection.url">jdbc:postgresql://localhost:5432/todolist</property>
        <property name = "hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name = "hibernate.connection.username">postgres</property>
        <property name = "hibernate.connection.password">password</property>
        <property name = "hibernate.dialect">org.hibernate.dialect.PostgreSQL91Dialect</property>
        <!-- List of XML mapping files -->
        <mapping resource = "todolist.models/Item.hbm.xml"/>
    </session-factory>
</hibernate-configuration>